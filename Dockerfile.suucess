# Use official Node.js image for React
FROM node:16-alpine

# Set working directory
WORKDIR /app

# Copy package.json and package-lock.json (or yarn.lock if you use yarn)
COPY package*.json ./

# Install dependencies
RUN npm install  

# Copy application files
COPY . .

# Expose React port
EXPOSE 3000

# Start the React development server (or use `npm run build` for production)
CMD ["npm", "start"]
